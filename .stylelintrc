{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components"
  ],
  "rules": {
    "order/order": [
        "custom-properties",
        "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "declaration-colon-space-after": always
  }
}
